<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FavoritePicturesListFragment"
    android:background="@color/black"
    android:layoutDirection="ltr"
    android:paddingHorizontal="13dp">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/favorite_images_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorite_images_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/empty_favorites_image_list_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:alpha=".15"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_clear"
            app:tint="@color/grey"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/empty_favorites_image_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazir_fd_bold"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>