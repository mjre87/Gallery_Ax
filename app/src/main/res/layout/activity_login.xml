<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".LoginActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/background_image_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background_image"
        android:alpha="0"
        tools:alpha="1" />

    <RelativeLayout
        android:id="@+id/splash_screen_background_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_page_background">

        <View
            android:id="@+id/icon_shape"
            android:layout_width="@dimen/splash_icon_size"
            android:layout_height="@dimen/splash_icon_size"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/app_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/icon_shape"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:layout_marginTop="24dp"
            android:alpha="0"
            tools:alpha="1"
            android:fontFamily="@font/vazir_fd_medium"
            android:textSize="14sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="32dp">

        <ProgressBar
            android:id="@+id/login_loading_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_with_google_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cornerRadius="@dimen/splash_icon_size"
            app:icon="@drawable/ic_google"
            app:iconGravity="textEnd"
            app:iconSize="20dp"
            app:backgroundTint="@color/dark_blue"
            android:text="@string/google_button_text"
            android:fontFamily="@font/vazir_fd_bold"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/login_as_guest_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_as_guest_strike_section"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="5dp"
                android:alpha=".7"
                android:fontFamily="@font/vazir_fd_medium"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_as_guest_normal_section"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:layout_marginTop="16dp"
                android:alpha=".7"
                android:fontFamily="@font/vazir_fd_medium"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>