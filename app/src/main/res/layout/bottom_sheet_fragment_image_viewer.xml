<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottom_sheets.ImageViewerBottomSheetFragment"
    android:background="@color/black">

    <ProgressBar
        android:id="@+id/image_viewer_pb"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_viewer_main_layout_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:alpha="0"
        tools:alpha="1"
        tools:visibility="visible">

        <TextView
            android:id="@+id/picture_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/vazir_fd_regular"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="عنوان تصویر اینجا قرار میگیره!" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/gray_opacity_7"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@id/image_viewer_download_mb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/picture_title_tv">

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_gravity="top|start"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="16dp" />

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/image_viewer_download_mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="16dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/vazir_fd_bold"
            android:text="دانلود تصویر"
            android:textColor="@color/white"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_download"
            app:iconTint="@color/white"
            app:iconGravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/image_viewer_like_mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:paddingHorizontal="16dp"
            android:backgroundTint="@color/dark_grey"
            android:fontFamily="@font/vazir_fd_bold"
            android:text="لایک تصویر"
            android:textColor="@color/white"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_heart"
            app:iconTint="@color/white"
            app:iconGravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_viewer_close_mcv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="100dp"
        app:cardUseCompatPadding="false"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="27dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close" />

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>